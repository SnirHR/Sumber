<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001220"
    android:weightSum="100">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="147.0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="2.5"
        android:id="@+id/RandomLayout">
        <TextView
            android:layout_gravity="center_horizontal"
            android:text="-1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="172.0dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/Rubik"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:id="@+id/textView1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="97.5"
        android:weightSum="99"
        android:id="@+id/linearLayout1" >
        <ScrollView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:id="@+id/scrollOne">
        </ScrollView>
        <ScrollView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:id="@id/scrollSum">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100"
                android:id="@+id/sumHolder">
                <TextView
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:textAlignment="center"
                    android:id="@+id/sumTwo" />
                <TextView
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    
                    android:id="@+id/sumOne" />


            </LinearLayout>
        </ScrollView>
        <ScrollView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:id="@+id/scrollThree" >
        </ScrollView>
    </LinearLayout>



</LinearLayout>
